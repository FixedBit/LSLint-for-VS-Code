{
  "name": "lslint",
  "displayName": "LSLint For VSCode",
  "description": "Adds LSLint (Second Life LSL Linting) support to VSCode",
  "version": "1.0.0",
  "publisher": "FixedBit",
  "author": "Jason Hawks",
  "repository": {
    "type": "git",
    "url": "https://github.com/FixedBit/lslint-for-vscode.git"
  },
  "icon": "sl.png",
  "galleryBanner": {
    "color": "#050523",
    "theme": "dark"
  },
  "license": "GPL v3",
  "engines": {
    "vscode": "^1.58.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onCommand:lslint.lint",
    "onCommand:lslint.reloadSettings",
    "onLanguage:lsl"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "LSLint for VSCode",
      "properties": {
        "lslint.realtimeWait": {
          "type": "integer",
          "default": 1000,
          "description": "Milliseconds to wait between each realtime linting (minimum 1000 for 1 second)"
        },
        "lslint.realtimeLinting": {
          "type": "boolean",
          "default": true,
          "description": "Enable linting in real time"
        },
        "lslint.lintOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Enable linting when you save the document"
        },
        "lslint.popupErrors": {
          "type": "boolean",
          "default": true,
          "description": "Show LSLint message popups after linting"
        },
        "lslint.ignoreDirectives": {
          "type": "boolean",
          "default": false,
          "description": "Ignore Firestorm preprocessor directives"
        },
        "lslint.enableSwitchStatements": {
          "type": "boolean",
          "default": false,
          "description": "Enable Firestorm preprocessor Switch Statements"
        },
        "lslint.enableLazyLists": {
          "type": "boolean",
          "default": false,
          "description": "Enable Firestorm preprocessor Lazy List Syntax"
        },
        "lslint.interpreter": {
          "type": "string",
          "default": "lslint",
          "description": "The executable for LSLint; must be in your path"
        }
      }
    },
    "commands": [
      {
        "command": "lslint.lint",
        "title": "Use LSLint to check your script for errors"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.58.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}
